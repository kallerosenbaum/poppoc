<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <File name="poppocLog" fileName="${sys:catalina.home}/logs/poppoc.log" append="false">
            <PatternLayout pattern="%d %-5p %c{1.} (%F:%L) - %m%n"/>
        </File>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%d %-5p [%t] %C{2} (%F:%L) - %m%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="se.rosenbaum" level="debug">
            <AppenderRef ref="poppocLog"/>
        </Logger>
        <Root level="info">
            <AppenderRef ref="poppocLog"/>
        </Root>
    </Loggers>
</Configuration>